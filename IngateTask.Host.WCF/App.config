<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6" />
  </startup>
  <system.serviceModel>
    <behaviors>
      <serviceBehaviors>
        <behavior name="mexBehavior">
          <serviceMetadata httpGetEnabled="true" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <bindings>
      <wsDualHttpBinding>
        <binding 
                 closeTimeout="10:01:30"
                 openTimeout="10:01:50"
                 receiveTimeout="10:01:50"
                 sendTimeout="10:01:50">
          <reliableSession ordered="true"
                           inactivityTimeout="03:00:50" />
        </binding>
      </wsDualHttpBinding>
    </bindings>
    <services>
      <service name="IngateTask.Service.WCF.Crawler" behaviorConfiguration="mexBehavior">
        <endpoint address="IngateTask.Service.WCF.Crawler" binding="wsDualHttpBinding" contract="IngateTask.Service.WCF.ICrawler">
          <identity>
            <dns value="localhost" />
          </identity>
        </endpoint>
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8733/" />
          </baseAddresses>
        </host>
      </service>
    </services>
  </system.serviceModel>
</configuration>